---
const { id, title, subtitle, description, img, icon1, icon2, left, bg, bg2 } = Astro.props;

const flexrow = left ? "lg:flex-row-reverse" : "lg:flex-row";
const bgcolor = bg ? "bg-white" : "bg-gray";
const icons =  left ? "left-0" : "right-6";
const animIzq = left ? "animateSlideInLeft" : "animateSlideInRight";
const animDer = left ? "animateSlideInRight" : "animateSlideInLeft";
---

<section id={id} class={`relative ${bgcolor} py-5 bg-repeat bg-contain z-10`}>
  {
    bg2 && (
      <div class="absolute w-full h-full inset-0 bg-[url('/img/bg-figuras.webp')] bg-contain opacity-50"></div>
    )
  }
  <div class="animate-zoom-in">
    <img src={icon1} alt="" class={`hidden lg:block absolute z-20 lg:h-36 xl:h-48 2xl:h-56 ${icons} top-[600px] lg:top-5 2xl:top-6 -right-2 2xl:right-5`} />
    <img src={icon2} alt="" class={`hidden lg:block absolute z-10 lg:h-36 xl:h-52 2xl:h-60 ${icons} top-[600px] lg:top-7 rotate-12`}/>
  </div>

  <div
    class={`flex flex-col ${flexrow} items-center justify-center max-w-sm sm:max-w-lg md:max-w-2xl lg:max-w-4xl xl:max-w-5xl 2xl:max-w-7xl mx-auto w-full h-full mt-20 lg:mt-40 mb-20 lg:mb-40 gap-4 md:gap-10 xl:gap-12 2xl:gap-20`}
  >
    <div class="flex justify-center items-center w-full lg:w-1/2">
      <img
        src={img}
        alt="Foto del servicio de camaras"
        class={`${animIzq} w-full object-cover rounded-2xl drop-shadow-2xl h-72 md:h-[400px] lg:h-80 xl:h-[400px]`}
      />
    </div>
    <div class={`${animDer} flex-col justify-center w-full md:w-9/12 lg:w-1/2 ${bg2 && ("bg-black/3 rounded-3xl px-3 lg:px-10 py-1 xl:py-5 backdrop-blur-xs")}`}>
      <h3 class="my-3 text-2xl sm:text-3xl lg:text-2xl xl:text-3xl text-center md:text-left w-full xl:w-4/5 2xl:w-11/12 capitalize font-bold text-accent-700">
        {title}
      </h3>
      <h2 class="my-4 text-3xl sm:text-4xl md:text-5xl lg:text-4xl xl:text-5xl text-center md:text-left capitalize font-rakkas text-letter">
        {subtitle}
      </h2>
      <p class="my-4 md:my-6 w-full 2xl:w-11/12 text-lg md:text-xl lg:text-base xl:text-xl text-center md:text-left font-medium">{description}</p>
