---
import Menu from "@/components/Menu.astro";

const { title, subtitle, description, bgimg, phone } = Astro.props;
---

<header
  class="relative bg-repeat bg-contain"
  style={`background-image: url(${bgimg});`}
>
  <Menu />

  <img
    src="img/nubes-headerDos.webp"
    alt="nubes blancas header"
    class="absolute bottom-0 right-0 w-full z-10"
  />

  <div
    class="z-40 h-4 w-full bg-red-500 sm:bg-accent md:bg-yellow-500 lg:bg-green-500 xl:bg-blue-500 2xl:bg-black"
  >
  </div>-

  <div
    class="max-w-sm sm:max-w-lg md:max-w-2xl lg:max-w-4xl xl:max-w-5xl 2xl:max-w-7xl mx-auto w-full pb-16 lg:pb-32 pt-4"
  >
    <div class="z-20 w-full md:w-5/6 md:mx-16">
      <h3
        class="animate-fade-in-up my-3 text-xl md:text-3xl lg:text-3xl text-center lg:text-left capitalize font-bold text-accent-700"
      >
        {title}
      </h3>
      <h1
        class="animate-fade-in-up my-4 text-3xl md:text-4xl lg:text-5xl text-center lg:text-left w-full lg:w-4/5 capitalize font-rakkas text-letter"
      >
        {subtitle}
      </h1>
      <p
        class="animate-fade-in-up my-4 lg:my-6 w-full lg:w-11/12 text-letter text-lg lg:text-xl text-center lg:text-left font-medium"
      >
        {description}
      </p>

      {
        phone && (
          <div class="animate-fade-in-up flex justify-center md:justify-start items-center gap-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="55"
              height="55"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-9 sm:h-12 md:h-14 stroke-accent"
            >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" />
                <path d="M15 7a2 2 0 0 1 2 2" />
                <path d="M15 3a6 6 0 0 1 6 6" />
              </>
            </svg>
            <div class="flex-col justify-center items-center gap-2">
              <p class="text-xl lg:text-3xl font-medium">Llamanos</p>
              <p class="text-accent text-xl lg:text-3xl font-black">
                322-313-94-67
              </p>
            </div>
          </div>
        )
      }
    </div>
  </div>
</header>

<style>
  .animate-fade-in-up {
    animation-play-state: paused;
  }
  .animate-fade-in-up.play {
    animation-play-state: running;
    animation-duration: 1.5s;
  }
</style>

<script>
  import { observer } from "@/utils/observer";

  document
    .querySelectorAll(".animate-fade-in-up")
    .forEach((el) => observer.observe(el));
</script>
