---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Nosotros from "@/components/Nosotros.astro";
import Service from "@/components/Service.astro";
import Equipo from "@/components/Equipo.astro";
import Testimonios from "@/components/Testimonios.astro";
import CallToAction from "@/components/CallToAction.astro";
import Footer from "@/components/Footer.astro";
---

<Layout
  title="Jardín Infantil Howard Gardner | Educación integral infantil en Bogotá, Castilla"
  description="En el Jardín Infantil Howard Gardner desarrollamos en los niños la creatividad, autoestima y habilidades a través del juego, afecto y ambientes seguros. Ofrecemos inglés intensivo, apoyo psicológico, nutrición personalizada y monitoreo en vivo para la tranquilidad de los padres y acudientes. Ubicados en Bogotá-Castilla, — ¡contáctanos hoy!"
  image="/img/instalaciones/fachadaInternaHorizontal.webp"
>
  <Header />

  <main>
    <Nosotros
      title="¡La aventura de aprender!"
      subtitle="¡Donde las pequeñas manos crean grandes sueños!"
      description="Howard Gardner es un jardín altamente calificado para desarrollar en los niños una formación integral en valores de calor humano, fortaleciendo su autoestima, despertando su imaginación y su creatividad, todo esto, a través de ambientes adecuados que brindan al niño la seguridad de aprender, tomar decisiones y enfrentarse a los cambios en su entorno social."
      description2=""
      hasButton
      listPrincipal
    />
    <Service />
    <Equipo />
    <Testimonios />
    <CallToAction />
  </main>

  <Footer />
</Layout>
